{
    "manifest_version": 3,
    "name": "AI Prompt Sender",
    "version": "1.2",
    "permissions": ["contextMenus", "scripting", "tabs", "storage"],
    "host_permissions": [
      "https://chat.openai.com/*",
      "https://gemini.google.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
}
